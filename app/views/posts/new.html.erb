<section class="posts new">
  <div class="content">
    <%= form_for(:post, url: posts_path, method: :post) do |f| %>
      <h1 class="text-center">Create new post</h1>

      <div class="form-group">
        <h4><%= f.label :image_field, "Picture", class: ''%></h4>
        <%= f.file_field :image, id: "post_image_field", class: "form-control" %>
      </div>

      <div class="form-group">
        <h4><%= f.label :caption, "Caption", class: '' %></h4>
        <%= f.text_field :caption, id: "post_caption_field", class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Create new post", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>

    <h5 class= "text-center">
      <%= link_to "Return to dashboard", dashboard_index_path, class: '' %>
    </h5>    
  </div>
</section>
