<section class="password-resets new">
  <div class="content">
    <%= form_for(:reset, url: password_resets_path, method: :post) do |f| %>
      <h1 class="text-center">Reset My Password</h1>

      <div class="form-group">
        <h4><%=f.label :email_field, "Email", class: '' %></h4>
        <%= f.email_field :email, required: true, id: "user_email_field", class: "form-control" %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Reset my password", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>

    <h5 class="text-center">
      <%= link_to "Return home", root_path, class: '' %>
    </h5>
  </div>
</section>        
